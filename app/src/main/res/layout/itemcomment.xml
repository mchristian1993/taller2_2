<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_radius"
        android:padding="10dp">
        <!-- nombre usuario -->

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titulo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id de posts:"
                android:textStyle="bold"
                android:typeface="serif"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/idpost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/titulo1"
                android:text="c2am"
                android:textStyle="bold"
                android:typeface="serif"
                android:textSize="20sp" />


        </RelativeLayout>
        <!-- imagen -->

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1"
            android:layout_marginTop="10dp"
            android:padding="1dp">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/img1"
                android:layout_width="160dp"
                android:layout_height="230dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/p1" />


        </RelativeLayout>

        <!-- info -->
        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/rl2"
            android:padding="1dp">


            <!-- item1 -->
            <RelativeLayout
                android:id="@+id/principal1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">






            </RelativeLayout>

            <!-- item2 -->
            <RelativeLayout
                android:id="@+id/principal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/principal1"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/itemide2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#48c9b0">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"


                        android:layout_alignParentTop="true"
                        android:text="Id"
                        android:textColor="@color/blanco"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:typeface="serif" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/item3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/itemide2"
                    android:background="#2e86c1">

                    <TextView
                        android:id="@+id/txtide2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Romaguera-Crona"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/blanco"
                        android:textSize="18sp" />
                </RelativeLayout>


            </RelativeLayout>


            <!-- item3 -->
            <RelativeLayout
                android:id="@+id/principal3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/principal2"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/itemide3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#48c9b0">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Email"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/blanco"
                        android:textSize="23sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/item4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/itemide3"
                    android:background="#2e86c1">

                    <TextView
                        android:id="@+id/txtide3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Romaguera-Crona"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/blanco"
                        android:textSize="18sp" />
                </RelativeLayout>


            </RelativeLayout>


            <!-- item5 -->
            <RelativeLayout


                android:id="@+id/principal4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/principal3"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/itemide4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#48c9b0">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Cntenido"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/blanco"
                        android:textSize="23sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/item5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/itemide4"
                    android:background="#2e86c1">

                    <TextView
                        android:id="@+id/txtide4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Romaguera-Crona"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/blanco"
                        android:textSize="18sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>